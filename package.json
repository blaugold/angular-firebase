{
  "name": "@blaugold/angular-firebase",
  "version": "1.0.6",
  "description": "Wrapper around Firebase JS-API for Angular 2 Apps.",
  "keywords": [
    "Firebase",
    "Angular 2",
    "Observable",
    "RxJS"
  ],
  "main": "index.js",
  "module": "index.js",
  "engines": {
    "node": ">=5.0.0"
  },
  "scripts": {
    "typedoc": "typedoc",
    "predoc": "rimraf docs",
    "doc": "npm run typedoc -- --options typedoc.json index.ts",
    "upload-coverage": "coveralls < coverage/lcov.info",
    "karma": "karma start",
    "test": "COVERAGE=true npm run karma -- --single-run",
    "copy": "cpy package.json README.md release",
    "ngc": "ngc -p aot.tsconfig.json",
    "clean:pre": "rimraf release",
    "clean:post": "rimraf src/**/*.ngfactory.ts",
    "prebuild": "npm run clean:pre",
    "build": "npm run ngc",
    "postbuild": "npm run copy && npm run clean:post",
    "release": "standard-version"
  },
  "author": "Gabriel Terwesten <gabriel@terwesten.net>",
  "license": "MIT",
  "dependencies": {
    "firebase": "^3.7.2"
  },
  "peerDependencies": {
    "@angular/core": "^4.0.0-rc.5",
    "rxjs": "^5.2.0"
  },
  "devDependencies": {
    "@angular/common": "^4.0.0-rc.5",
    "@angular/compiler": "^4.0.0-rc.5",
    "@angular/compiler-cli": "^4.0.0-rc.5",
    "@angular/core": "^4.0.0-rc.5",
    "@angular/platform-browser": "^4.0.0-rc.5",
    "@angular/platform-browser-dynamic": "^4.0.0-rc.5",
    "@angular/platform-server": "^4.0.0-rc.5",
    "@types/jasmine": "^2.5.46",
    "@types/node": "^7.0.8",
    "awesome-typescript-loader": "^3.1.2",
    "babel-core": "^6.24.0",
    "babel-preset-es2017": "^6.22.0",
    "core-js": "^2.4.1",
    "coveralls": "^2.12.0",
    "cpy-cli": "^1.0.1",
    "jasmine": "^2.5.3",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-remap-istanbul": "^0.6.0",
    "karma-webpack": "^2.0.3",
    "rimraf": "^2.6.1",
    "rxjs": "^5.2.0",
    "sourcemap-istanbul-instrumenter-loader": "^0.2.0",
    "standard-version": "^4.0.0",
    "typedoc": "^0.5.7",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1",
    "zone.js": "^0.8.4"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blaugold/angular-firebase.git"
  },
  "bugs": {
    "url": "https://github.com/blaugold/angular-firebase/issues"
  },
  "homepage": "https://github.com/blaugold/angular-firebase#readme"
}
