{
  "name": "@blaugold/angular-firebase",
  "version": "1.0.0",
  "description": "Wrapper around Firebase JS-API for Angular 2 Apps.",
  "keywords": [
    "Firebase",
    "Angular 2",
    "Observable",
    "RxJS"
  ],
  "main": "index.js",
  "module": "index.js",
  "engines": {
    "node": ">=5.0.0"
  },
  "scripts": {
    "typedoc": "typedoc",
    "predoc": "rimraf docs",
    "doc": "npm run typedoc -- --options typedoc.json index.ts",
    "upload-coverage": "coveralls < coverage/lcov.info",
    "karma": "karma start",
    "test": "COVERAGE=true npm run karma -- --single-run",
    "copy": "cpy package.json README.md release",
    "ngc": "ngc -p aot.tsconfig.json",
    "clean:pre": "rimraf release",
    "clean:post": "rimraf src/**/*.ngfactory.ts",
    "prebuild": "npm run clean:pre",
    "build": "npm run ngc",
    "postbuild": "npm run copy && npm run clean:post",
    "release": "standard-version"
  },
  "author": "Gabriel Terwesten <gabriel@terwesten.net>",
  "license": "MIT",
  "dependencies": {
    "firebase": "^3.5.3"
  },
  "peerDependencies": {
    "@angular/core": "^2.1.2",
    "rxjs": "5.0.0-beta.12"
  },
  "devDependencies": {
    "@angular/common": "^2.1.2",
    "@angular/compiler": "^2.1.2",
    "@angular/compiler-cli": "^2.1.2",
    "@angular/core": "^2.1.2",
    "@angular/platform-browser": "^2.1.2",
    "@angular/platform-browser-dynamic": "^2.1.2",
    "@angular/platform-server": "^2.1.2",
    "@types/jasmine": "^2.5.37",
    "@types/node": "^6.0.46",
    "awesome-typescript-loader": "^2.2.4",
    "babel-core": "^6.18.2",
    "babel-preset-es2017": "^6.16.0",
    "core-js": "^2.4.1",
    "coveralls": "^2.11.14",
    "cpy-cli": "^1.0.1",
    "jasmine": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.2.0",
    "karma-remap-istanbul": "^0.2.1",
    "karma-webpack": "^1.8.0",
    "rimraf": "^2.5.4",
    "rxjs": "5.0.0-beta.12",
    "sourcemap-istanbul-instrumenter-loader": "^0.2.0",
    "standard-version": "^3.0.0",
    "typedoc": "^0.5.1",
    "typescript": "2.0.x",
    "webpack": "^2.1.0-beta.25",
    "zone.js": "^0.6.26"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blaugold/angular-firebase.git"
  },
  "bugs": {
    "url": "https://github.com/blaugold/angular-firebase/issues"
  },
  "homepage": "https://github.com/blaugold/angular-firebase#readme"
}
