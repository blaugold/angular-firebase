{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "../release",
    "rootDir": "./",
    "sourceMap": true,
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es5",
    "types": []
  },
  "files": [
    "index.ts",
    "typings.d.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "../compiled",
    "skipMetadataEmit": false,
    "strictMetadataEmit": true
  }
}