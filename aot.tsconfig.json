{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./release",
    "rootDir": ".",
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "types": [
      "node",
      "zone.js"
    ]
  },
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "compiled",
    "release",
    "docs"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "compiled"
  }
}